/* HEADER */

.JC-Header {
    background: linear-gradient(0deg, #111318, rgba(19,47,34,57%)),url(https://imgur.com/qzJFfBo);
    height: 600px;
    background-size: cover;
    background-position: top;
}

.JC-HeaderContent {
    position: relative;
}

.JC-HeaderContent-between {
    width: 1200px;
    margin: 0 auto;
    display: flex;
    height: 250px;
    align-items: flex-end;
    justify-content: space-between;
}

.JC-LogoLink {
    position: relative;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.JCBranding {
    width: 250px;
    position: absolute;
    margin-top: -150px;
    transition: 0.3s ease;
}

.JCBranding:hover {
    transition: 0.3s ease;
    filter: drop-shadow(0px 0px 8px var(--accent));
}

.JC-HeaderContent-betRight {
    display: flex;
    align-items: center;
    transition: 0.3s ease;
    text-align: left;
    width: 300px;
}

.JC-HeaderContent-betLeft {
    display: flex;
    align-items: center;
    flex-direction: row-reverse;
    text-align: right;
    transition: 0.3s ease;
    width: 300px;
}

.JC-HeaderContent-big {
    color: var(--accent);
    font-size: 18px;
    text-transform: uppercase;
    font-weight: 700;
    letter-spacing: 1px;
}

.JC-HeaderContent-small {
    font-size: 14px;
    text-transform: uppercase;
    color: var(--text);
    margin-top: -3px;
    font-weight: 700;
}

.JC-HeaderContent-betLeft .JC-HeaderContent-icon {
    margin-left: 15px;
}

.JC-HeaderContent-betRight .JC-HeaderContent-icon {
    margin-right: 15px;
}

.JC-HeaderContent-betRight:hover {
    transition: 0.3s ease;
    cursor: pointer;
    filter: drop-shadow(0px 0px 5px #496b35);
}

.JC-HeaderContent-betLeft:hover {
    transition: 0.3s ease;
    cursor: pointer;
    filter: drop-shadow(0px 0px 5px #496b35);
}

.JC-HeaderContent-icon {
    width: 50px;
    color: var(--accent);
}

.JC-navBar {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 80px;
}

.JC-navBar-width {
    width: 1300px;
    background: var(--panelLight);
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100px;
    border-radius: 10px;
    padding: 0px 25px;
    box-shadow: var(--boxShadow2);
}

.JC-navBar-left {
    display: flex;
    align-items: center;
    justify-content: center;
}

.JC-navLink {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    font-size: 18px;
    letter-spacing: 1px;
    font-weight: 700;
    padding: 20px 15px;
    color: #4d566a;
    text-decoration: none;
    transition: .3s ease;
}

.JC-navLink:hover {
    color: #fff;
    transition: 0.3s ease;
}

.JC-navLink i {
    margin-right: 10px;
    opacity: 1;
    font-size: 20px;
}

.JC-navLink-active {
    position: relative;
}

.JC-navLink-active::after {
    content: "";
    position: absolute;
    left: 50%;
    bottom: 0;
    width: 20%;
    height: 5px;
    top: 60px;
    background: var(--accent);
    -webkit-transition: 0.2s ease-out;
    transition: 0.2s ease-out;
    border-radius: 5px;
    -webkit-transform: translateX(-50%);
    transform: translateX(-50%);
    -webkit-filter: drop-shadow(0px 0px 5px var(--accent));
    filter: drop-shadow(0px 0px 5px var(--accent));
}

.JC-navStore {
    background: var(--accent);
    padding: 15px 70px;
    font-size: 18px;
    font-weight: 600;
    color: #fff;
    border-radius: 20px;
    filter: drop-shadow(0px 0px 4px var(--accent));
    transition: 0.3s ease;
}

.JC-navStore:hover {
    filter: drop-shadow(0px 0px 8px var(--accent));
    transition: 0.3s ease;
}

.JC-Footer {
    background: #15171d;
    margin-top: 80px;
}

.JC-FooterWidth {
    padding: 30px 20px;
    width: 1200px;
    margin: 0 auto;
}

.JC-FooterText-main {
    font-weight: 600;
    font-size: 16px;
}

.JC-FooterText-small {
