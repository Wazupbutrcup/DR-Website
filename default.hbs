:root {
	--body: #111318;
    --panel: #181b21;
    --panelLight: #1d2027;
    --panelMain: #15171d;
	--accent: #2ebf2e;
	--accentHover: #4c8c27;
	--text: #686f7d;
	--titleColor: #c8cedc;
	--icons: #7d90b1;
	--boxShadow: 0px 8px 24px 0px rgba(0, 0, 0, 0.1);
    --boxShadow2: 0 10px 15px -3px rgba(0,0,0,20%), 0 4px 6px -2px rgba(0,0,0,10%);
}

body {
	font-family: 'Poppins', sans-serif;
	color: var(--text);
